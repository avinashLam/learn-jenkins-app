pipeline {
    agent any

    stages {
        stage('Build') {
agent{
docker{
image 'node:18-alpine'
reuseNode true
}
}

            
            steps {
                script {
                    sh 'echo "Starting Build Process..."'
                }
            
            }
        }
    }

    post {
        success {
            echo 'Build completed successfully.'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
