pipeline {
    agent any
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                script {
                    echo 'Starting Build Process...'
                }
                sh '''
                   ls -la
                   node --version
                   npm --version
                   npm ci
                   npm run build
                '''
            }
        }
stage('Test'){
    steps{
        sh''' npm build'''

    }
}

}
    }
    post {
        success {
            echo 'Build completed successfully.'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
