pipeline {
    agent any

    environment {
        NETLIFY_PROJECT_ID = 'e6eb429a-2a00-4fee-82f4-7773c27704f3'
        NETLIFY_AUTH_TOKEN = credentials('netlify-token')
    }

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                script {
                    echo 'Starting Build Process...'
                }
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                '''
            }
        }

        stage('Unit Tests') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    npm ci
                    npm test -- --ci --reporters=default --reporters=jest-junit
                '''
            }
        }
    }

    post {
        always {
            // Collect Jest JUnit results
            junit '**/junit.xml'
        }
    }
}
